<Window x:Class="GradeVerification.ForgotPassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GradeVerification"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Forgot Password" Height="800" Width="500"
        Background="{x:Null}" AllowsTransparency="True"
        WindowStyle="None" WindowStartupLocation="CenterScreen">

    <materialDesign:Card UniformCornerRadius="20" Background="White" Margin="30">
        <materialDesign:DialogHost CloseOnClickAway="True" x:Name="DialogHost">
            <StackPanel Margin="20">

                <!-- Application Logo -->
                <Image Margin="0 40 0 10" Source="Resources/umlogo.png" Height="150" HorizontalAlignment="Center"/>

                <!-- Forgot Password Text -->
                <TextBlock Margin="0 20 0 5" HorizontalAlignment="Center" FontSize="32" FontWeight="Bold" Text="Forgot Password?"/>

                <!-- Instruction Text -->
                <TextBlock TextAlignment="Center" TextWrapping="Wrap" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center" Text="Please enter your email address to receive an OTP code" Margin="0 0 0 20"/>

                <!-- Email Input -->
                <TextBox Margin="0 10" Width="350" FontSize="18" BorderThickness="2"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Enter Your Email"
                         materialDesign:HintAssist.Background="White"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Send OTP Button -->
                <Button Margin="0 20" Style="{StaticResource MaterialDesignFlatMidBgButton}"
                        materialDesign:ShadowAssist.Darken="True" Height="55" Width="350"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        FontSize="18" Content="Send OTP" 
                        Command="{Binding SendOtpCommand}"/>

                <!-- OTP Input -->
                <TextBox Margin="0 10" Width="350" FontSize="18" BorderThickness="2"
                         BorderBrush="{DynamicResource MaterialDesignDivider}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         materialDesign:HintAssist.Hint="Enter OTP Code"
                         materialDesign:HintAssist.Background="White"
                         IsEnabled="{Binding IsOtpEnabled}"
                         Text="{Binding OtpCode, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Verify OTP Button -->
                <Button Margin="0 20" Style="{StaticResource MaterialDesignFlatMidBgButton}"
                        materialDesign:ShadowAssist.Darken="True" Height="55" Width="350"
                        materialDesign:ButtonAssist.CornerRadius="10"
                        FontSize="18" Content="Verify OTP" 
                        Command="{Binding VerifyOtpCommand}" 
                        IsEnabled="{Binding IsOtpEnabled}"/>

                <!-- Back to Login Button -->
                <Button Margin="0 10" Style="{StaticResource MaterialDesignFlatButton}"
                        FontSize="16" Content="Back to Login"
                        HorizontalAlignment="Center"
                        Command="{Binding BackCommand}"/>
                
            </StackPanel>
        </materialDesign:DialogHost>
    </materialDesign:Card>
</Window>
