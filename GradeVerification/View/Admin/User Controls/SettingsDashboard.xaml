<UserControl x:Class="GradeVerification.View.Admin.User_Controls.SettingsDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GradeVerification.View.Admin.User_Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border CornerRadius="0 10 10 0">
        <Border.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#F8F9FA" Offset="0"/>
                <GradientStop Color="#E9ECEF" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="System Settings - Backup &amp; Restore"
                       FontSize="26" 
                       FontWeight="Bold" 
                       Foreground="#495057" 
                       Margin="0,20,0,20"/>

            <!-- Backup and Restore Cards -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Backup Card -->
                <Border Grid.Column="0" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="30" 
                        Margin="10"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Backup Data" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="#28A745" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Backup your system data to a secure location. This action creates a snapshot of all critical data."
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,20"/>
                        <Button Content="Create Backup" 
                                Height="40" 
                                Background="#28A745" 
                                Foreground="White" 
                                Command="{Binding BackupCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </Border>

                <!-- Restore Card -->
                <Border Grid.Column="1" 
                        Background="White" 
                        CornerRadius="10" 
                        Padding="30" 
                        Margin="10"
                        BorderBrush="#E0E0E0"
                        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Restore Data" 
                                   FontSize="20" 
                                   FontWeight="SemiBold" 
                                   Foreground="#007BFF" 
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Restore your system data from an existing backup. Select the appropriate backup file to begin restoration."
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,20"/>
                        <Button Content="Restore Backup" 
                                Height="40" 
                                Background="#007BFF" 
                                Foreground="White" 
                                Command="{Binding RestoreCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</UserControl>
