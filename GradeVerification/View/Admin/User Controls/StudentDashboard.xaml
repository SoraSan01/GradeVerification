<UserControl x:Class="GradeVerification.View.Admin.User_Controls.StudentDashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GradeVerification.View.Admin.User_Controls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             MinHeight="640" MinWidth="1030">
    <Border CornerRadius="0 10 10 0" Background="#FAFAFA">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Panel with Search, Filters, and Add Button -->
            <Border Background="White" CornerRadius="10" Margin="20" Padding="15" 
                    materialDesign:ElevationAssist.Elevation="Dp3">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.2*"/>
                        <ColumnDefinition Width="1.5*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search TextBox -->
                    <TextBox Name="txtSearch" Height="40" Padding="10" Background="#F5F5F5" 
                             materialDesign:HintAssist.Hint="Search Student..." 
                             Style="{StaticResource MaterialDesignOutlinedTextBox}" 
                             FontSize="14" BorderBrush="#E0E0E0" Grid.Column="0" Margin="0,0,10,0"/>

                    <!-- Semester Filter -->
                    <ComboBox Name="cbSemester" Height="40" Grid.Column="1" Margin="0,0,10,0"
                              materialDesign:HintAssist.Hint="Semester"
                              Style="{StaticResource MaterialDesignComboBox}"/>

                    <!-- Year Filter -->
                    <ComboBox Name="cbYear" Height="40" Grid.Column="2" Margin="0,0,10,0"
                              materialDesign:HintAssist.Hint="Year"
                              Style="{StaticResource MaterialDesignComboBox}"/>

                    <!-- Program Filter -->
                    <ComboBox Name="cbProgram" Height="40" Grid.Column="3" Margin="0,0,10,0"
                              materialDesign:HintAssist.Hint="Program"
                              Style="{StaticResource MaterialDesignComboBox}"/>

                    <!-- Add Student Button -->
                    <Button Content="Add Student" Height="40" Padding="20,0" Background="#28A745"
                            Foreground="White" FontSize="14" FontWeight="SemiBold" 
                            BorderBrush="Transparent" BorderThickness="0" Cursor="Hand" 
                            materialDesign:ButtonAssist.CornerRadius="8"
                            Grid.Column="4"/>
                </Grid>
            </Border>

            <!-- Student Data Table -->
            <Border Grid.Row="1" Background="White" CornerRadius="10" Margin="20" Padding="0"
                    materialDesign:ElevationAssist.Elevation="Dp3">
                <DataGrid Name="dgStudents" AutoGenerateColumns="False" HeadersVisibility="Column"
                          Background="White" BorderThickness="0" RowHeight="50" FontSize="14" 
                          GridLinesVisibility="None" ColumnHeaderHeight="40"
                          AlternationCount="2" Style="{StaticResource DataGridStyle1}"
                          RowStyle="{DynamicResource DataGridRowStyle1}"
                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                          CellStyle="{DynamicResource DataGridCellStyle1}" >
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding StudentID}" Width="100"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="100"/>
                        <DataGridTextColumn Header="Course" Binding="{Binding Course}" Width="200"/>

                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Actions" Width="180">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="Edit" Width="80" Margin="5,0" 
                                                Background="#52BE80" Foreground="White"
                                                FontSize="12" FontWeight="SemiBold" 
                                                BorderBrush="Transparent" BorderThickness="0"
                                                Cursor="Hand" 
                                                materialDesign:ButtonAssist.CornerRadius="6"/>
                                        <Button Content="Delete" Width="80" Margin="5,0"
                                                Background="#E74C3C" Foreground="White"
                                                FontSize="12" FontWeight="SemiBold" 
                                                BorderBrush="Transparent" BorderThickness="0"
                                                Cursor="Hand" 
                                                materialDesign:ButtonAssist.CornerRadius="6"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>
        </Grid>
    </Border>
</UserControl>
