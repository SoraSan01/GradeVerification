<Window x:Class="GradeVerification.View.Admin.Windows.AddStudent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:GradeVerification.ViewModel"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        Title="AddStudent" MinHeight="790" MinWidth="1150">
    
    
    <Border CornerRadius="5" Background="#ffffff" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Add Student" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="55 0 0 2" FontSize="16" FontWeight="SemiBold" Foreground="#4880ff"/>

            <materialDesign:PackIcon Kind="School" HorizontalAlignment="Left" VerticalAlignment="Center"
                                     Margin="30 0 0 4" Width="20" Height="20" Foreground="#4880ff"/>

            <!-- Top Menu -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right" Margin="0 0 15 0">
                <Button Style="{StaticResource menuButton2}">
                    <materialDesign:PackIcon Kind="BellOutline" Width="18" Height="18"/>
                </Button>
                <Button Style="{StaticResource menuButton2}">
                    <materialDesign:PackIcon Kind="WindowMinimize" Width="18" Height="18"/>
                </Button>
                <Button Style="{StaticResource menuButton2}">
                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                </Button>
            </StackPanel>

            <!-- Right Section -->
            <Border Grid.Row="1" Grid.Column="1" CornerRadius="0 0 5 0">
    <Border.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4CAF50" Offset="0.2"/> <!-- Light Green -->
            <GradientStop Color="#2E7D32" Offset="1"/>  <!-- Dark Green -->
        </LinearGradientBrush>
    </Border.Background>
    <StackPanel Margin="60 0 10 0">
        <Border CornerRadius="100" Width="85" Height="85" Background="#ffffff" Margin="15 40 20 20">
            <Ellipse Width="80" Height="80">
                <Ellipse.Fill>
                    <ImageBrush Stretch="UniformToFill" ImageSource="/Resources/umlogo.png"/>
                </Ellipse.Fill>
            </Ellipse>
        </Border>
        <TextBlock Foreground="#ffffff" FontWeight="SemiBold" TextAlignment="Center" FontSize="20" Text="Add Student"/>
        <TextBlock Foreground="#e6e8ec" FontWeight="Light" TextAlignment="Center" FontSize="13" LineHeight="24"
                   TextWrapping="Wrap" Margin="40 15 40 20" Text="Fill in the student details below."/>
    </StackPanel>
</Border>


            <!-- Left Section -->
            <Border Grid.Row="1" Background="#f2f5f8" CornerRadius="0 0 0 5">
                <Grid VerticalAlignment="Center" Margin="70 0 -60 0">
                    <Border CornerRadius="7" Background="#ffffff">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                        </Border.Effect>

                        <Grid Margin="20 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--Form Title-->
                            <StackPanel Orientation="Horizontal" Margin="20 20 0 0">
                                <Border CornerRadius="50" BorderThickness="1.5" BorderBrush="#efefef">
                                    <Ellipse Width="40" Height="40">
                                        <Ellipse.Fill>
                                            <ImageBrush/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Border>

                                <TextBlock Text="Student Details" Foreground="#374655" FontSize="18" Margin="15 0 0 0" VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <Separator Grid.Row="1" Grid.ColumnSpan="2" Height="1" Background="#e1e6eb"/>

                            <!-- Inputs -->
                            <TextBox Grid.Row="2" Grid.Column="0" Margin="10" materialDesign:HintAssist.Hint="First Name"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="10" materialDesign:HintAssist.Hint="Last Name"/>

                            <TextBox Grid.Row="3" Grid.Column="0" Margin="10" materialDesign:HintAssist.Hint="Student ID"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="10" materialDesign:HintAssist.Hint="Email"/>

                            <ComboBox Grid.Row="4" Grid.Column="0" Margin="10" materialDesign:HintAssist.Hint="Select Semester">
                                <ComboBoxItem Content="First Semester"/>
                                <ComboBoxItem Content="Second Semester"/>
                            </ComboBox>
                            <ComboBox Grid.Row="4" Grid.Column="1" Margin="10" materialDesign:HintAssist.Hint="Select Year">
                                <ComboBoxItem Content="First Year"/>
                                <ComboBoxItem Content="Second Year"/>
                                <ComboBoxItem Content="Third Year"/>
                                <ComboBoxItem Content="Fourth Year"/>
                            </ComboBox>

                            <ComboBox Grid.Row="5" Grid.Column="0" Margin="10" materialDesign:HintAssist.Hint="Select Program">
                            </ComboBox>
                            <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                                <Button Content="Back" Width="100" Style="{StaticResource secondaryButton}"/>
                                <Button Content="Save Student" Width="150" Margin="10 0 0 0" Style="{StaticResource mainButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
