<Window x:Class="GradeVerification.View.Admin.Windows.AddUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:GradeVerification.ViewModel"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" Background="Transparent"
        Title="AddUser" Height="490" Width="750">

    <Border CornerRadius="5" Background="#ffffff" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="462*"/>
                <RowDefinition Height="283*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Add User" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="55,0,0,0" FontSize="16" FontWeight="SemiBold" Foreground="#4880ff"/>

            <materialDesign:PackIcon Kind="AccountPlus"
                                     Margin="30,10,0,0" Width="20" Height="20" Foreground="#4880ff"/>

            <!-- Top Menu -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Left" Margin="315,0,0,0">
                <Button Style="{StaticResource menuButton2}" Click="btn_Minimize">
                    <materialDesign:PackIcon Kind="WindowMinimize" Width="18" Height="18"/>
                </Button>
                <Button Style="{StaticResource menuButton2}" Click="btn_Close">
                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                </Button>
            </StackPanel>

            <!-- Right Section -->
            <Border Grid.Row="1" Grid.Column="1" CornerRadius="0 0 5 0" Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2196F3" Offset="0.2"/>
                        <!-- Light Blue -->
                        <GradientStop Color="#1565C0" Offset="1"/>
                        <!-- Dark Blue -->
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Margin="60 0 10 0">
                    <Border CornerRadius="100" Width="85" Height="85" Background="#ffffff" Margin="15 40 20 20">
                        <Ellipse Width="80" Height="80">
                            <Ellipse.Fill>
                                <ImageBrush Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Border>
                    <TextBlock Foreground="#ffffff" FontWeight="SemiBold" TextAlignment="Center" FontSize="20" Text="Add User"/>
                    <TextBlock Foreground="#e6e8ec" FontWeight="Light" TextAlignment="Center" FontSize="13" LineHeight="24"
                               TextWrapping="Wrap" Margin="40 15 40 20" Text="Fill in the user details below."/>
                </StackPanel>
            </Border>

            <!-- Left Section -->
            <Border Grid.Row="1" Background="#f2f5f8" CornerRadius="0 0 0 5" Grid.RowSpan="2">
                <Grid VerticalAlignment="Center" Margin="70 0 -60 0">
                    <Border CornerRadius="7" Background="#ffffff">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                        </Border.Effect>
                        <Grid Margin="20 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--Form Title-->
                            <StackPanel Orientation="Horizontal" Margin="20 20 0 0">
                                <Border CornerRadius="50" BorderThickness="1.5" BorderBrush="#efefef">
                                    <Ellipse Width="40" Height="40">
                                        <Ellipse.Fill>
                                            <ImageBrush/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </Border>
                                <TextBlock Text="User Details" Foreground="#374655" FontSize="18" Margin="15 0 0 0" VerticalAlignment="Center"/>
                            </StackPanel>

                            <Separator Grid.Row="1" Grid.ColumnSpan="2" Height="1" Background="#e1e6eb"/>

                            <!-- First Name & Last Name -->
                            <TextBox Grid.Row="2" Grid.Column="0" Margin="10" materialDesign:HintAssist.Hint="First Name"
                                     Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="10" materialDesign:HintAssist.Hint="Last Name"
                                     Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <!-- Username & Email -->
                            <TextBox Grid.Row="3" Grid.Column="0" Margin="10" materialDesign:HintAssist.Hint="Username"
                                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>
                            <TextBox Grid.Row="3" Grid.Column="1" Margin="10" materialDesign:HintAssist.Hint="Email"
                                     Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <!-- Password & Confirm Password -->
                            <PasswordBox Grid.Row="4" Grid.Column="0" Margin="10" x:Name="PasswordBoxControl"
                                         materialDesign:HintAssist.Hint="Password" 
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                            <PasswordBox Grid.Row="4" Grid.Column="1" Margin="10" x:Name="ConfirmPasswordBoxControl"
                                         materialDesign:HintAssist.Hint="Confirm Password" 
                                         PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>
                            
                            <!-- Role Selection -->
                            <ComboBox Grid.Row="5" Grid.Column="0" Margin="10" materialDesign:HintAssist.Hint="Select Role"
                                      ItemsSource="{Binding Roles}" SelectedItem="{Binding SelectedRole}"/>

                            <!-- Buttons -->
                            <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="20">
                                <Button Content="Back" Width="100" Style="{StaticResource secondaryButton}"/>
                                <Button Content="Save User" Width="150" Margin="10 0 0 0" Style="{StaticResource mainButton}"
                                        Command="{Binding SaveUserCommand}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
