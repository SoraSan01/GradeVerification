<Window x:Class="GradeVerification.View.Admin.Windows.CompletionGradeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" 
        WindowStyle="None" 
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True" 
        Background="Transparent"
        Title="CompletionGradeDialog" Height="500" Width="750">

    <Border CornerRadius="5" Background="#ffffff" MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <TextBlock Text="Completion Grade" HorizontalAlignment="Left" VerticalAlignment="Center"
                       Margin="55,0,0,0" FontSize="16" FontWeight="SemiBold" Foreground="#4880ff"/>
            <materialDesign:PackIcon Kind="ClipboardEdit" Margin="30,10,0,0" Width="20" Height="20" Foreground="#4880ff"/>

            <!-- Top Menu -->
            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Left" Margin="220,0,0,0">
                <Button Style="{StaticResource menuButton2}" Click="btn_Minimize">
                    <materialDesign:PackIcon Kind="WindowMinimize" Width="18" Height="18"/>
                </Button>
                <Button Style="{StaticResource menuButton2}" Click="btn_Close">
                    <materialDesign:PackIcon Kind="Close" Width="18" Height="18"/>
                </Button>
            </StackPanel>

            <!-- Right Section -->
            <Border Grid.Row="1" Grid.Column="1" CornerRadius="0 0 5 0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#2196F3" Offset="0.2"/>
                        <GradientStop Color="#1976D2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel Margin="60 0 10 0">
                    <materialDesign:PackIcon Kind="ClipboardCheck" Width="80" Height="80" Foreground="#ffffff" Margin="0 40 0 20"/>
                    <TextBlock Foreground="#ffffff" FontWeight="SemiBold" TextAlignment="Center" FontSize="20" Text="Completion Grade"/>
                    <TextBlock Foreground="#e6e8ec" FontWeight="Light" TextAlignment="Center" FontSize="13" LineHeight="24"
                               TextWrapping="Wrap" Margin="40 15 40 20" Text="Enter the completion grade details below."/>
                </StackPanel>
            </Border>

            <!-- Left Section -->
            <Border Grid.Row="1" Background="#f2f5f8" CornerRadius="0 0 0 5">
                <Grid VerticalAlignment="Center" Margin="70 0 -60 0">
                    <Border CornerRadius="7" Background="#ffffff">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="30" ShadowDepth="5" Direction="-130" Opacity="0.1"/>
                        </Border.Effect>
                        <Grid Margin="20 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Form Title -->
                            <StackPanel Orientation="Horizontal" Margin="20 20 0 0" Grid.Row="0">
                                <materialDesign:PackIcon Kind="ClipboardText" Width="40" Height="40" Foreground="#374655"/>
                                <TextBlock Text="Grade Details" Foreground="#374655" FontSize="18" Margin="10 0 0 0"/>
                            </StackPanel>

                            <Separator Grid.Row="1" Grid.ColumnSpan="2" Height="1" Background="#e1e6eb"/>

                            <!-- Student Info -->
                            <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="10"
                                       Text="{Binding Grade.Student.FullName, StringFormat='Student: {0}'}"
                                       FontWeight="SemiBold"/>

                            <TextBlock Grid.Row="3" Grid.ColumnSpan="2" Margin="10"
                                       Text="{Binding Grade.Subject.SubjectName, StringFormat='Subject: {0}'}"
                                       FontWeight="SemiBold"/>

                            <!-- Original Grade -->
                            <TextBox Grid.Row="4" Grid.Column="0" Margin="10"
                                     Text="{Binding Grade.Score, Mode=OneWay}"
                                     IsReadOnly="True"
                                     materialDesign:HintAssist.Hint="Original Grade"/>

                            <!-- Completion Grade -->
                            <TextBox Grid.Row="4" Grid.Column="1" Margin="10"
                                     Text="{Binding CompletionGrade, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                     materialDesign:HintAssist.Hint="Completion Grade*"/>

                            <!-- Exam Date -->
                            <DatePicker Grid.Row="5" Grid.Column="0" Margin="10"
                                        SelectedDate="{Binding ExamDate}"
                                        materialDesign:HintAssist.Hint="Exam Date*"/>

                            <!-- Professor -->
                            <ComboBox Grid.Row="5" Grid.Column="1" Margin="10"
                                      ItemsSource="{Binding Professors}"
                                      SelectedItem="{Binding SelectedProfessor}"
                                      DisplayMemberPath="Name"
                                      materialDesign:HintAssist.Hint="Select Professor*"/>

                            <!-- Status -->
                            <ComboBox Grid.Row="6" Grid.Column="0" Margin="10"
                                      ItemsSource="{Binding StatusOptions}"
                                      SelectedItem="{Binding SelectedStatus}"
                                      materialDesign:HintAssist.Hint="Select Status*"/>

                            <!-- Buttons -->
                            <!-- Updated Buttons Section -->
                            <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" 
          HorizontalAlignment="Center" Margin="20 20">
                                <Button Content="Cancel" Width="150" 
            Command="{Binding CancelCommand}" 
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Style="{StaticResource secondaryButton}"/>

                                <Button Content="Save Grade" Width="150" Margin="10 0 0 0"
            Command="{Binding SaveCompletionCommand}" 
            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
            Style="{StaticResource mainButton}"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>